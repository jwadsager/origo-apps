VERSION=1.0
BASEIMAGE=origo-xenial.small-1.4.master.qcow2
NAME=discourse
APPNAME=Discourse
DIR=
DIRTARGET=
TAR=
TARTARGET=
DEBS=postgresql postgresql-contrib redis-server nginx apt-transport-https postfix discourse
PREEXEC=wget -qO - https://deb.packager.io/key | sudo apt-key add - \n\
        echo "deb http://deb.packager.io/gh/pkgr/discourse trusty pkgr" | sudo tee /etc/apt/sources.list.d/discourse.list
        cat > /etc/nginx/sites-available/default <<EOF \n\
        server { \n\
          listen          80; \n\
          server_name     $(discourse config:get DISCOURSE_HOSTNAME); \n\
          location / { \n\
            proxy_pass      http://localhost:6000; \n\
          } \n\
        } \n\
        EOF \n\
        discourse config:set DATABASE_URL=postgres://user:pass@127.0.0.1/discourse \n\
        discourse config:set REDIS_URL=redis://127.0.0.1:6379 \n\
        discourse config:set SECRET_TOKEN=$(discourse run rake secret) \n\
POSTEXEC=
SERVICE=/usr/share/webmin/origo/tabs/origo-discourse.pl

